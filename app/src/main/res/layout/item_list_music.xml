<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgAnhcasi"
            android:layout_width="160px"
            android:layout_height="160px"
            android:src="@drawable/iconsinger" />

        <TextView
            android:id="@+id/tvTenBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/ImgAnhcasi"
            android:text="Tập quen với cô đơn"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenBaiHat"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/ImgAnhcasi"
            android:text="4:03"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvTencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvThoiGian"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/ImgAnhcasi"
            android:text="Ti Ti"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/ImgYeuThich"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_favorite_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>